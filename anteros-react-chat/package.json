{
    "name": "@anterostecnologia/anteros-react-chat",
    "version": "1.0.4",
    "description": "Anteros components for React - Chat Typescript",
    "main": "dist/@anterostecnologia/anteros-react-chat",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "source": "src/index.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build:umd": "cross-env BUILD_MODE=umd webpack",
        "build:umd-min": "cross-env BUILD_MODE=umd-min webpack",
        "build:types": "tsc --outDir ./dist --declaration --emitDeclarationOnly",
        "build": "npm run build:umd && npm run build:umd-min && npm run build:types",
        "build:watch": "npm run build -- --watch",
        "clean": "rimraf dist",
        "tag": "git tag -a \"v$npm_package_version\" -m \"tag version $npm_package_version\" && git push origin master --tags",
        "lint": "eslint --ext=ts,tsx src test --fix",
        "test": "npx mocha -R spec --require ts-node/register ./test/setup.js ./test/setup.js test/*_test.{ts,tsx}",
        "docs": "typedoc src/index.ts && gh-pages -d docs"
    },
    "author": "Edson Martins",
    "license": "Apache 2.0",
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@types/react-redux": "^7.1.24",
        "@types/react-router-dom": "^5.3.3",
        "axios": "^0.27.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.2",
        "progressbar.js": "^1.1.0",
        "qs": "^6.11.0",
        "react": "^16.14.0",
        "react-addons-shallow-compare": "^15.6.3",
        "react-dom": "^16.14.0",
        "react-icons": "^4.6.0",
        "react-loader-spinner": "^5.1.7-beta.1",
        "react-redux": "^8.0.2",
        "regenerator-runtime": "^0.13.9",
        "rimraf": "^3.0.2",
        "style-loader": "^3.3.1",
        "timeago.js": "^4.0.2",
        "ts-loader": "^9.4.1",
        "typedoc": "^0.23.15",
        "typescript": "^4.7.4",
        "universal-base64": "^2.1.0",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "peerDependencies": {
        "react": "^16.14.0",
        "react-dom": "^16.14.0"
    },
    "dependencies": {
        "classnames": "^2.3.2",
        "sass": "^1.56.1",
        "sass-loader": "^13.2.0",
        "yargs": "^17.6.2"
    }
}
