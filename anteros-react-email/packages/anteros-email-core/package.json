{
  "name": "@anterostecnologia/anteros-email-core",
  "license": "MIT",
  "description": "Email editor",
  "version": "1.0.6",
  "author": "Edson",
  "keywords": [
    "email editor core"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "yarn build --watch",
    "typings": "tsc --declaration --emitDeclarationOnly --project tsconfig.lib.json",
    "build": "rimraf lib  && npm run typings && tsc-alias  && vite build --config vite.config.ts",
    "block": "ts-node -r tsconfig-paths/register scripts/generateBlockJSX.ts",
    "format": "eslint --fix  --ext .tsx,.ts src/",
    "test": "jest  --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}, example/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.24",
    "@types/jsdom": "^16.2.13",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.7",
    "@types/react": "17.0.2",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.0.6",
    "jsdom": "^17.0.0",
    "mjml-browser": "^4.10.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.4.1",
    "tsconfig-paths": "^3.11.0",
    "vite": "^2.5.6"
  },
  "dependencies": {
    "@types/uuid": "^8.3.4",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.1",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "mjml-browser": "^4.10.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
