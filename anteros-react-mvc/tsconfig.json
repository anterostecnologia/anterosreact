{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
      "types": ["node"],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noImplicitThis": true,
      "outDir": "dist/esm",
      "sourceMap": true,
      "strict": true,
      "experimentalDecorators": true,
      "target": "es6"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
